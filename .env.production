# Production Environment Variables Template
# Copy this file to .env.local for local development
# Set these variables in your deployment platform (Netlify, Vercel, etc.)

# ================================
# AUTHENTICATION (CLERK)
# ================================
# Get these from: https://dashboard.clerk.dev
VITE_CLERK_PUBLISHABLE_KEY=pk_live_your_live_key_here
CLERK_SECRET_KEY=sk_live_your_secret_key_here
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ================================
# AI SERVICES
# ================================
# Get from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# ================================
# DATABASE (FIREBASE)
# ================================
# Get these from: https://console.firebase.google.com
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# ================================
# ANALYTICS & MONITORING
# ================================
# Optional: Google Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Optional: Sentry Error Tracking
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ================================
# APPLICATION SETTINGS
# ================================
VITE_APP_NAME="AI SEO Automation Platform"
VITE_APP_URL=https://your-domain.com
VITE_API_BASE_URL=https://api.your-domain.com

# ================================
# FEATURE FLAGS
# ================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_DEMO_MODE=false

# ================================
# RATE LIMITING
# ================================
VITE_API_RATE_LIMIT=60
VITE_AI_RATE_LIMIT=20

# ================================
# DEVELOPMENT ONLY
# ================================
# Only for local development
NODE_ENV=production
VITE_DEBUG=false
